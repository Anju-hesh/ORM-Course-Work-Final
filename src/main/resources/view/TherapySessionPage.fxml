        <ComboBox fx:id="timeComboBox" layoutX="700.0" layoutY="170.0" prefHeight="30.0" prefWidth="214.0" />

        <JFXComboBox fx:id="cmbDuration" layoutX="720.0" layoutY="220.0" prefHeight="30.0" prefWidth="214.0" />
